<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/card_and_text_bg</item>
        <item name="android:fontFamily">@font/nokia_pure</item>
        <item name="dialogTheme">@style/DialogStyle</item>
        <item name="alertDialogTheme">@style/DialogStyle</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>
    
    <style name="DialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:background">@color/card_and_text_bg</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="textColorAlertDialogListItem">@color/textColorPrimary</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Cards" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12.0dip</item>
        <item name="android:layout_marginStart">12.0dip</item>
        <item name="android:layout_marginEnd">12.0dip</item>
        <item name="cardBackgroundColor">@color/card_and_text_bg</item>
        <item name="cardCornerRadius">8.0dip</item>
        <item name="cardElevation">2.0dip</item>
        <item name="strokeWidth">0.1dp</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <style name="CardHeaders" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/card_header</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/nokia_pure</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8.0dip</item>
        <item name="android:paddingEnd">12.0dip</item>
        <item name="android:layout_marginStart">24.0dip</item>
        <item name="android:elevation">4.0dip</item>
        <item name="android:drawableTint">@color/card_header</item>
        <item name="android:drawablePadding">8.0dip</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">30dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Button" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="strokeColor">@color/card_and_text_bg</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="iconTint">@color/textColorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/card_and_text_bg</item>
    </style>

</resources>
