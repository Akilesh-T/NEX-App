<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?actionBarSize"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="@color/background"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:minHeight="125dp"
                app:cardBackgroundColor="@color/background"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:gravity="center"
                    android:text="@string/intro"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:minHeight="190dp"
                app:cardBackgroundColor="@color/background"
                >

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/ai_floating_touch"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/ai_floating_touch_desc"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ai_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:fontFamily="@font/nokia_pure"
                    android:insetLeft="8dp"
                    android:insetTop="4dp"
                    android:insetRight="8dp"
                    android:insetBottom="8dp"
                    android:text="@string/open_app" />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:minHeight="125dp"
                app:cardBackgroundColor="@color/background"
                >

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/app_traffic"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/app_traffic_desc"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fw_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:fontFamily="@font/nokia_pure"
                    android:insetLeft="8dp"
                    android:insetTop="4dp"
                    android:insetRight="8dp"
                    android:insetBottom="8dp"
                    android:text="@string/open_app" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:minHeight="125dp"
                app:cardBackgroundColor="@color/background"
                >

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/game_assistant"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/game_assistant_desc"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ga_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:fontFamily="@font/nokia_pure"
                    android:insetLeft="8dp"
                    android:insetTop="4dp"
                    android:insetRight="8dp"
                    android:insetBottom="8dp"
                    android:text="@string/open_app" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:minHeight="125dp"
                app:cardBackgroundColor="@color/background"
                >

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/junk_cleaner"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/juck_cleaner_desc"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/jc_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:fontFamily="@font/nokia_pure"
                    android:insetLeft="8dp"
                    android:insetTop="4dp"
                    android:insetRight="8dp"
                    android:insetBottom="8dp"
                    android:text="@string/open_app" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:minHeight="120dp"
                app:cardBackgroundColor="@color/background"
                >

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/screen_recorder_settings"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="19sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/screen_recorder_settings_desc"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sr_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:fontFamily="@font/nokia_pure"
                    android:insetLeft="8dp"
                    android:insetTop="4dp"
                    android:insetRight="8dp"
                    android:insetBottom="8dp"
                    android:text="@string/open_app" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:minHeight="195dp"
                app:cardBackgroundColor="@color/background"
                >


                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/smart_boost"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/smart_boost_desc"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sb_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:fontFamily="@font/nokia_pure"
                    android:insetLeft="8dp"
                    android:insetTop="4dp"
                    android:insetRight="8dp"
                    android:insetBottom="8dp"
                    android:text="@string/open_app" />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:minHeight="125dp"
                app:cardBackgroundColor="@color/background"
                >

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/task_manager"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/task_manager_desc"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tm_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:fontFamily="@font/nokia_pure"
                    android:insetLeft="8dp"
                    android:insetTop="4dp"
                    android:insetRight="8dp"
                    android:insetBottom="8dp"
                    android:text="@string/open_app" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:minHeight="125dp"
                app:cardBackgroundColor="@color/background"
                >

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/virus_scanner"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/background"
                    android:fontFamily="@font/nokia_pure"
                    android:text="@string/virus_scan_desc"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/vs_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:fontFamily="@font/nokia_pure"
                    android:insetLeft="8dp"
                    android:insetTop="4dp"
                    android:insetRight="8dp"
                    android:insetBottom="8dp"
                    android:text="@string/open_app" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="8dp"
                 />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>