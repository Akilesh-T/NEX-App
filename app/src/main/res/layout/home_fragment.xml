<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?actionBarSize"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">




        <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            xmlns:tools="http://schemas.android.com/tools">



            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@color/background"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="50dp">


                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:innerRadius="0dp"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    app:cardBackgroundColor="@color/background"
                    android:minHeight="150dp"
                    tools:ignore="PrivateResource">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="35dp"
                        android:textSize="18sp"
                        android:background="@color/background"
                        android:textColor="?android:attr/textColorPrimary"
                        android:typeface="sans"
                        android:text="@string/intro"/>
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:innerRadius="0dp"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    android:minHeight="190dp"
                    app:cardBackgroundColor="@color/background"
                    tools:ignore="PrivateResource">

                    <TextView
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:background="@color/background"
                        android:textSize="19sp"
                        android:text="@string/ai_floating_touch"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="35dp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="18sp"
                        android:background="@color/background"
                        android:typeface="sans"
                        android:text="@string/ai_floating_touch_desc"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:insetRight="8dp"
                        android:insetLeft="8dp"
                        android:insetBottom="8dp"
                        android:insetTop="4dp"
                        android:onClick="launchAIFloatingTouch"
                        android:text="@string/open_app" />
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:innerRadius="0dp"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    android:minHeight="125dp"
                    app:cardBackgroundColor="@color/background"
                    tools:ignore="PrivateResource">

                    <TextView
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:background="@color/background"
                        android:textSize="19sp"
                        android:text="@string/app_traffic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="35dp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="18sp"
                        android:background="@color/background"
                        android:typeface="sans"
                        android:text="@string/app_traffic_desc"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:insetRight="8dp"
                        android:insetLeft="8dp"
                        android:insetBottom="8dp"
                        android:insetTop="4dp"
                        android:onClick="launchFireWall"
                        android:text="@string/open_app" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:innerRadius="0dp"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    android:minHeight="125dp"
                    app:cardBackgroundColor="@color/background"
                    tools:ignore="PrivateResource">

                    <TextView
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textAllCaps="false"
                        android:background="@color/background"
                        android:textColor="@color/colorAccent"
                        android:textSize="19sp"
                        android:text="@string/junk_cleaner"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="35dp"
                        android:textSize="18sp"
                        android:background="@color/background"
                        android:textColor="?android:attr/textColorPrimary"
                        android:typeface="sans"
                        android:text="@string/juck_cleaner_desc"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:insetRight="8dp"
                        android:insetLeft="8dp"
                        android:insetBottom="8dp"
                        android:insetTop="4dp"
                        android:onClick="launchJunkCleaner"
                        android:text="@string/open_app" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:innerRadius="0dp"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    app:cardBackgroundColor="@color/background"
                    android:minHeight="120dp"
                    tools:ignore="PrivateResource">

                    <TextView
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="19sp"
                        android:background="@color/background"
                        android:text="@string/screen_recorder_settings"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="35dp"
                        android:textSize="18sp"
                        android:typeface="sans"
                        android:background="@color/background"
                        android:textColor="?android:attr/textColorPrimary"
                        android:text="@string/screen_recorder_settings_desc"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:insetRight="8dp"
                        android:insetLeft="8dp"
                        android:insetBottom="8dp"
                        android:insetTop="4dp"
                        android:layout_gravity="bottom|end"
                        android:onClick="launchScreenRecorder"
                        android:text="@string/open_app"/>
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:innerRadius="0dp"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    android:minHeight="195dp"
                    app:cardBackgroundColor="@color/background"
                    tools:ignore="PrivateResource">


                    <TextView
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textAllCaps="false"
                        android:background="@color/background"
                        android:textColor="@color/colorAccent"
                        android:textSize="19sp"
                        android:text="@string/smart_boost"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="35dp"
                        android:textSize="18sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:typeface="sans"
                        android:background="@color/background"
                        android:text="@string/smart_boost_desc"/>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/material_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:insetRight="8dp"
                        android:insetLeft="8dp"
                        android:insetBottom="8dp"
                        android:insetTop="4dp"
                        android:onClick="launchSmartBoost"
                        android:text="@string/open_app"/>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:innerRadius="0dp"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    android:minHeight="125dp"
                    app:cardBackgroundColor="@color/background"
                    tools:ignore="PrivateResource">

                    <TextView
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:background="@color/background"
                        android:textSize="19sp"
                        android:text="@string/task_manager"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="35dp"
                        android:textSize="18sp"
                        android:typeface="sans"
                        android:textColor="?android:attr/textColorPrimary"
                        android:background="@color/background"
                        android:text="@string/task_manager_desc"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:insetRight="8dp"
                        android:insetLeft="8dp"
                        android:insetBottom="8dp"
                        android:insetTop="4dp"
                        android:onClick="launchTaskManager"
                        android:text="@string/open_app" />
                </com.google.android.material.card.MaterialCardView>



                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:innerRadius="0dp"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    app:cardBackgroundColor="@color/background"
                    android:minHeight="125dp"
                    tools:ignore="PrivateResource">

                    <TextView
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="19sp"
                        android:background="@color/background"
                        android:text="@string/virus_scanner"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="35dp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="18sp"
                        android:background="@color/background"
                        android:typeface="sans"
                        android:text="@string/virus_scan_desc"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:insetRight="8dp"
                        android:insetLeft="8dp"
                        android:insetBottom="8dp"
                        android:insetTop="4dp"
                        android:onClick="launchVirusScan"
                        android:text="@string/open_app" />
                </com.google.android.material.card.MaterialCardView>

                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mtrl_card_spacing"
                    tools:ignore="PrivateResource" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>