<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="theme_category"
        app:title="@string/display">

        <ListPreference
            app:key="themePref"
            app:title="Dark theme"
            app:icon="@drawable/ic_outline_nights_stay"
            app:defaultValue="default"
            app:dialogTitle="Dark theme"
            app:entries="@array/themeListArray"
            app:entryValues="@array/themeEntryArray"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
